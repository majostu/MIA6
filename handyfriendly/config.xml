<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.fontys.media.handyfriendly" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Handy Friendly</name>
    <description>
        A wheelchair user friendly toilet finder app.
    </description>
    <author email="info@marijnstuyfzand.nl" href="http://marijnstuyfzand.nl">
        Marijn Stuyfzand
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <access origin="http://google.com" />
    <access origin="https://google.com" />
    <access origin="http://maps.google.com" />
    <access origin="http://*.google.com" />
    <access origin="*.google.*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <feature name="Accelerometer">
        <param name="ios-package" value="CDVAccelerometer" />
    </feature>
    <feature name="Compass">
        <param name="ios-package" value="CDVCompass" />
    </feature>
    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>
    
    	<platform name="ios">
	    <!-- images are determined by width and height. The following are supported -->
	    <splash src="img/Default~iphone.png" width="320" height="480"/>
	    <splash src="res/screen/ios/Default@2x~iphone.png" width="640" height="960"/>
	    <splash src="res/screen/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
	    <splash src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
	    <splash src="res/screen/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
	    <splash src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
	    <splash src="res/screen/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
	    <splash src="res/screen/ios/Default-667h.png" width="750" height="1334"/>
	    <splash src="res/screen/ios/Default-736h.png" width="1242" height="2208"/>
	    <splash src="res/screen/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
	</platform>  
    
    
</widget>
